{
    "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "types": ["vite/client", "node"],
        "moduleResolution": "node",
        "esModuleInterop": true,
    },
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["node_modules", "dist"]
}
